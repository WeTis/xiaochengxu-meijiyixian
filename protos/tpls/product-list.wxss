
.products-list{
  width: 100%;
  margin: 0;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-between; 
  font-size: 0;
}
.product-item{
  width: 347rpx;
  font-size: 28rpx;
  background-color: #ccc;
  margin-bottom: 16rpx;
  padding-bottom: 20rpx;
  text-align: center;
}
.product-item-img{
   width: 240rpx;
   height: 240rpx;

}
.shopList{
  width: 100%;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  padding:  0;
  padding-right: 20rpx;
  box-sizing: border-box;
}
.shopList .img{
  width: 250rpx;
  height:240rpx;
  margin-right: 20rpx;
}
.img image{
  width: 100%;
  height: 100%;
}
.context{
  flex: 1;
  position: relative;
  display: flex;
  box-sizing: border-box;
  flex-direction: column;
  /* padding: 10rpx 20rpx; */
}
.context .title{
   margin: 10rpx;
   font-size: 28rpx;
}
.table text{
   display: inline-block;
   margin: 0 10rpx;
   padding: 0 10rpx;
   height: 40rpx;
   line-height: 40rpx;
   border-radius: 10rpx;
   font-size: 20rpx;
}
.price-add {
  position: absolute;
  width: 100%;
  bottom: 10rpx;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  font-size: 26rpx;
}
.price-add view{
  /* flex: 1; */
}
.price{
  flex: 1;
  color: red;
  height: 50rpx;
  line-height: 50rpx;
}
.add{
  width: 180rpx;
  height: 50rpx;
  text-align: center;
  line-height: 50rpx;
  border-radius: 20rpx;
  background-color: #bad450;
  color: #fff;
}
.line {
  width: 100%;
  padding:0rpx;
   box-sizing: border-box;
}
.line view{
  width: 100%;
 
  height: 15rpx;
  background-color: #eee;
}